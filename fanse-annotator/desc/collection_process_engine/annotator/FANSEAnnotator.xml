<?xml version="1.0" encoding="UTF-8"?>
<cpeDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <collectionReader>
        <collectionIterator>
            <descriptor>
                <import name="collection_reader.XmiCollectionReader"/>
            </descriptor>
            <configurationParameterSettings>
                <nameValuePair>
                    <name>ParentInputDirectory</name>
                    <value>
                        <string>data/event_coreference_resolution</string>
                    </value>
                </nameValuePair>
                <nameValuePair>
                    <name>BaseInputDirectoryName</name>
                    <value>
                        <string>xmi_after_annotating_cleartk_timeml</string>
                    </value>
                </nameValuePair>
                <nameValuePair>
                    <name>InputDirectoryDate</name>
                    <value>
                        <string>20120911</string>
                    </value>
                </nameValuePair>
                <nameValuePair>
                    <name>StepNumber</name>
                    <value>
                        <integer>10</integer>
                    </value>
                </nameValuePair>
            </configurationParameterSettings>
        </collectionIterator>
    </collectionReader>
    <casProcessors casPoolSize="3" processingUnitThreadCount="1">
        <casProcessor deployment="integrated" name="AggregateFANSEAnnotator">
            <descriptor>
                <import name="aggregate.annotator.AggregateFANSEAnnotator"/>
            </descriptor>
            <deploymentParameters/>
            <errorHandling>
                <errorRateThreshold action="terminate" value="0/1000"/>
                <maxConsecutiveRestarts action="terminate" value="30"/>
                <timeout max="100000" default="-1"/>
            </errorHandling>
            <checkpoint batch="10000" time="1000ms"/>
        </casProcessor>
        <casProcessor deployment="integrated" name="Xmi Writer CAS Consumer">
            <descriptor>
                <import name="cas_consumer.XmiWriterCasConsumer"/>
            </descriptor>
            <deploymentParameters/>
            <errorHandling>
                <errorRateThreshold action="terminate" value="0/1000"/>
                <maxConsecutiveRestarts action="terminate" value="30"/>
                <timeout max="100000" default="-1"/>
            </errorHandling>
            <checkpoint batch="10000" time="1000ms"/>
            <configurationParameterSettings>
                <nameValuePair>
                    <name>ParentOutputDirectory</name>
                    <value>
                        <string>data/event_coreference_sudoku</string>
                    </value>
                </nameValuePair>
                <nameValuePair>
                    <name>BaseOutputDirectoryName</name>
                    <value>
                        <string>xmi_after_annotating_FANSE</string>
                    </value>
                </nameValuePair>
                <nameValuePair>
                    <name>StepNumber</name>
                    <value>
                        <integer>11</integer>
                    </value>
                </nameValuePair>
            </configurationParameterSettings>
        </casProcessor>
    </casProcessors>
    <cpeConfig>
        <numToProcess>-1</numToProcess>
        <deployAs>immediate</deployAs>
        <checkpoint batch="0" time="300000ms"/>
        <timerImpl/>
    </cpeConfig>
</cpeDescription>
